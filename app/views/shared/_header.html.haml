.header
  .header__box
    .header__box__main
      = link_to root_path do
        .header__box__main--icon
    .header__box__sub
      .header__box__sub__left
        .header__box__sub__left--category
          = link_to "#", class: "categoryBtn" do
            = "カテゴリー"
        .header__box__sub__left--brand
      .header__box__sub__right
        - if current_user.nil?
          = link_to new_user_session_path, class: "header__box__sub__right--log-in" do
            ログイン
          = link_to new_user_registration_path, class: "header__box__sub__right--register-user" do
            新規会員登録
        - else
          = link_to users_path(current_user), class:"header__box__sub__right--log-out" do
            マイページ