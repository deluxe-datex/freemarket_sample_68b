.header
  .header__box
    .header__box__main
      = link_to root_path do
        .header__box__main--icon
    .header__box__sub
      .header__box__sub__left
        .header__box__sub__left--category
          = link_to "#", class: "categoryBtn" do
            = "カテゴリー"
          .hideTree
            %ul.hideTree__parent
              - @category_parents.each do |parent|
                %li.hideTree__parent--item
                  = link_to "#", class: "item__link" do
                    = parent.name
            %ul.hideTree__parent
              - @category_children.each do |child|
                %li.hideTree__parent--item
                  = link_to "#", class: "item__link" do
                    = child.name

        .header__box__sub__left--brand
          = link_to "#", class: "brandBtn" do
            = "ブランド"
      .header__box__sub__right
        = link_to '#', class: "header__box__sub__right--log-in" do
          ログイン
        = link_to '#', class: "header__box__sub__right--register-user" do
          新規会員登録